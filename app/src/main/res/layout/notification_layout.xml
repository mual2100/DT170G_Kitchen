<?xml version="1.0" encoding="utf-8"?>
<!-- notification_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Replace View with a TextView for the notification background -->
    <TextView
        android:id="@+id/notification_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/initial_color" /> <!-- Set initial color -->

    <!-- Add other views for notification content -->
    <!-- For example: TextViews, ImageViews, etc. -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Order Received"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have received a new order"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="10dp"/>
</LinearLayout>
